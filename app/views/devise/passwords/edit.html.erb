
<div class="card bg-light mb-3" style="max-width: 25rem;">
  <div class="card-body">
   <div class="container">
<h3>Change your password</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
  <br />
 
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control text-center", placeholder: "New Password" %>
  </div>

  <div class="field">
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control text-center", placeholder: "Confrim New Password"%>
  </div>
  <hr class="my-2">

  <div class="actions">
    <%= f.submit "Change my password" ,class:"btn btn-outline-success"%>
  </div>


  </div>
</div>
</div>





<% end %>

<%= render "devise/shared/links" %>
