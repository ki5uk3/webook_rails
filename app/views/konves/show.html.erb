<h3> User Deatils 📂</h3><br/>

<div class="card bg-light mb-3" style="max-width: 25rem;">
  
  <div class="card-body">
    <h5 class="card-title"><%= @konfe.name %></h5>
    <p class="card-text">Quote 😎</p>
    <div class="card-header" ><i style="color: #FFFFB7"><%= @konfe.quote %></i></div>
    
  </div>
</div>


<div class="card bg-light mb-3" style="max-width: 25rem;">
  <hr class="my-1">

 <p class="lead"><strong style="color: #FFFFB7">👀 Instagram :</strong >
  <%= @konfe.insta_uname %></p>

   <p class="lead"><strong style="color: #FFFFB7">👻 Snapchat :</strong>
  <%= @konfe.snap_uname %></p>

 <p class="lead"><strong style="color: #FFFFB7">🧐 Age :</strong>
  <%= @konfe.age %></p><br/>

</div>
<%= link_to 'Edit', edit_konfe_path(@konfe), class:"btn btn-outline-primary" %> | |
<%= link_to 'Destroy', @konfe, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-outline-danger"%> | |
<%= link_to 'Back', konves_path, class:"btn btn-outline-dark" %>

